<p id="notice"><%= notice %></p>

<h1>Folders</h1>

<table>
  <thead>
    <tr>
      <th>Bp</th>
      <th>Pulse</th>
      <th>Spo2</th>
      <th>Temperature</th>
      <th>Complaints</th>
      <th>Advise</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= folder.bp %></td>
        <td><%= folder.pulse %></td>
        <td><%= folder.spo2 %></td>
        <td><%= folder.temperature %></td>
        <td><%= folder.complaints %></td>
        <td><%= folder.advise %></td>
        <td><%= folder.patient %></td>
        <td><%= link_to 'Show', folder %></td>
        <td><%= link_to 'Edit', edit_folder_path(folder) %></td>
        <td><%= link_to 'Destroy', folder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

