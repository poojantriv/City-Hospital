<div id="layoutAuthentication">
  <div id="layoutAuthentication_content">
    <main>
      <div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
              <div class="card-header">
                <h4 class="text-center font-weight-light my-4">
                  <b class="font-weight-bold">  
                    <% patient_name = Patient.find_by(id: @folder.patient_id) %>
                    <%= patient_name.name %></b>
                  </h4>
                </div>
                <div class="card-body">
                  <p id="notice"><%= notice %></p>

                  <p>
                    <strong>Bp:</strong>
                    <%= @folder.bp %>
                  </p>

                  <p>
                    <strong>Pulse:</strong>
                    <%= @folder.pulse %>
                  </p>

                  <p>
                    <strong>Spo2:</strong>
                    <%= @folder.spo2 %>
                  </p>

                  <p>
                    <strong>Temperature:</strong>
                    <%= @folder.temperature %>
                  </p>

                  <p>
                    <strong>Complaints:</strong>
                    <%= @folder.complaints %>
                  </p>

                  <p>
                    <strong>Advise:</strong>
                    <%= @folder.advise %>
                  </p>

                  <p>
                    <strong>Patient:</strong>
                    <% patient_name = Patient.find_by(id: @folder.patient_id) %>
                    <%= patient_name.name %>
                  </p>
                   <%= link_to 'Edit', edit_folder_path(@folder) %> |
                <%= link_to 'Back', {controller: "patients", action: "show", id: @folder.patient_id} %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
