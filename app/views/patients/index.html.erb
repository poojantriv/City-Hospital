    <% if ward == "Positive" %>
    <div class="card mb-4">
      <div class="card-header"><i class="fas fa-table mr-1"></i>Positive Patients</div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>MRD</th>
                <th>Name/Age</th>
                <th>Ward/Bed</th>
                <th>Air</th>
                <th>Delete | Edit</th>
                <th>Doc</th>
              </tr>
            </thead>
            <tbody>
              <% @patients.all.order(age: :asc).each do |patient| %>
                <% if patient.status == "Positive"  %>
                    <td><%= patient.mrd %></td>
                    <td><%= link_to patient.name, patient %> / <%= patient.age %> </td>
                    <td><%= patient.ward %> / <%= patient.bed %></td>
                    <td><%= patient.air %></td>
                    <td><%= link_to 'Delete', patient, method: :delete, data: { confirm: 'Are you sure?' } %> |
                        <%= link_to 'Edit', edit_patient_path(patient) %>                    
                    </td>
                    <td><% doc = User.find_by(id: patient.user_id) %>
                      <%= doc.email %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
          <%= link_to 'New Patient', new_patient_path %>
        </div>
      </div>
    </div>
    <% end %>

    <% if ward == "Suspected" %>
    <div class="card mb-4">
      <div class="card-header"><i class="fas fa-table mr-1"></i>Suspected Patients</div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>MRD</th>
                <th>Name/Age</th>
                <th>Ward/Bed</th>
                <th>Air</th>
                <th>Delete | Edit</th>
                <th>Doc</th>
              </tr>
            </thead>
            <tbody>
              <% @patients.all.order(age: :asc).each do |patient| %>
                <% if patient.status == "Suspected" %>
                    <td><%= patient.mrd %></td>
                    <td><%= link_to patient.name, patient %> / <%= patient.age %></td>
                    <td><%= patient.ward %> / <%= patient.bed %></td>
                    <td><%= patient.air %></td>
                    <td><%= link_to 'Delete', patient, method: :delete, data: { confirm: 'Are you sure?' } %> |
                    <%= link_to 'Edit', edit_patient_path(patient) %>                    
                    <td><% doc = User.find_by(id: patient.user_id) %>
                      <%= doc.email %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
          <%= link_to 'New Patient', new_patient_path %>
        </div>
      </div>
    </div>
    <% end %>

